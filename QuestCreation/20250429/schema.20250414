questSystems:
  schema:
    type: object
    properties:
      name: string
      'defaultTimeToComplete:': &id005
        type: object
        properties:
          unit: string
          amount: integer
      defaultQuestCooldown: &id004
        type: object
        properties:
          unit: string
          amount: integer
      defaultTimeToComplete:
        type: object
        properties:
          count: integer
          unit: string
    subcollections:
      Plank System Quests: &id006
        schema: &id001
          type: object
          properties:
            questRank: integer
            questPrompt: string
            questEventUnits: string
            questName: string
            questAuraGranted: float
            questEventCount: float
        example: *id001
      Walk System Quests:
        schema: &id002
          type: object
          properties:
            questRank: integer
            questPrompt: string
            questEventUnits: string
            questName: string
            questAuraGranted: float
            questEventCount: float
        example: *id002
      Pushup System Quests:
        schema: &id003
          type: object
          properties:
            questRank: string
            questPrompt: string
            questEventCount: string
            questAuraGranted: string
            questRepeatDebuff: string
            questName: string
            questEventUnits: string
        example: *id003
  example:
    type: object
    properties:
      defaultQuestCooldown: *id004
      'defaultTimeToComplete:': *id005
      name: string
    subcollections:
      Plank System Quests: *id006
